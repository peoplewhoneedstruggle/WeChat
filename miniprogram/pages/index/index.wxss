/**index.wxss**/

page {
    background: #f6f6f6;
    display: flex;
    flex-direction: center;
    justify-content: center;
}

.login {
    margin-top: 30px;
}

.startButton {
    margin: 13px 0;
    width: 95%;
    padding: 0;
    font-size: 16px;
}

.headTitle {
    display: block;
    text-align: center;
}

.divLine {
    background: #ccc;
    width: 100%;
    height: 1px;
    display: block;
}

.chooseType {
    margin: 10px;
    width: 100%;
    text-align: center;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    align-items: left;
}

.typeText {
    font-size: 16px;
    padding: 3px 20px 3px 15px;
}

.midDivLine {
    background: #ccc;
    width: 95%;
    height: 2rpx;
    margin-left: 2.5%;
}

.buttomList {
    margin: 20px;
}

.buttomText {
    margin: 0 20px;
    border: 1px solid black;
    padding: 5px;
    font-size: 12px;
}

.swiper {
    width: 100%;
    height: 30px;
    margin: 10px;
}