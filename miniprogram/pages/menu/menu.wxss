.body {
    display: flex;
    flex-wrap: wrap;
    width: 100%;
}

.header {
    width: 100%;
    display: flex;
    flex-direction: row;
    margin: 10px 0 10px 10px;
}

.topButtonList {
    width: 100%;
    text-align: right;
}

.meauText {
    font-size: 14px;
    align-self: center;
    width: 50px;
}

.selected {
    background-color: yellowgreen;
    color: white;
}

.topButton {
    margin: 0 10px 0 0;
}

.content {
    width: 100%;
}

.divLine {
    background: #ccc;
    width: 100%;
    height: 1px;
    display: block;
}

.meallist {
    display: block;
    padding: 5px;
}

.meaulistli {
    width: 100%;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
}

.mealLeft {
    padding: 10px 0 15px 10px;
}

.mealText {
    font-size: 16px;
    padding-left: 5px;
}

.breakfast,
.lunch,
.dinner,
.yexiao {
    border-radius: 4px;
    padding: 5px;
    margin-right: 5px;
    font-size: 8px;
}

.breakfast {
    border-top: 1px solid #f24544;
    border-bottom: 1px solid #f24544;
    border-right: 1px solid #f24544;
    border-left: 8px solid #f24544;
}

.lunch {
    border-top: 1px solid #9966CC;
    border-bottom: 1px solid #9966CC;
    border-right: 1px solid #9966CC;
    border-left: 8px solid #9966CC;
}

.dinner {
    border-top: 1px solid #3388FF;
    border-bottom: 1px solid #3388FF;
    border-right: 1px solid #3388FF;
    border-left: 8px solid #3388FF;
}

.yexiao {
    border-top: 1px solid #72777b;
    border-bottom: 1px solid #72777b;
    border-right: 1px solid #72777b;
    border-left: 8px solid #72777b;
}

.meal-between {
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.delete {
    margin: 0 1rem 0 0.5rem;
}

.mealRight {
    align-self: center;
    text-align: right;
}